<div class="messageCenter w-100 d-flex flex-column justify-content-start align-items-center bg-color">
	<div class="form-group w-100 mb-2 pb-2">
		<label for="email">Email</label>
		<input class="form-control" type="email" id="email" placeholder="Enter your email..." required />
	</div>
	<div class="form-group w-100 mb-2 pb-2">
		<label for="name">Name</label>
		<input class="form-control" type="text" id="name" placeholder="Enter your name..." required />
	</div>
	<div class="form-group w-100 mb-2 pb-2">
		<label for="surname">Surname</label>
		<input class="form-control" type="text" id="surname" placeholder="Enter your surname..." required />
	</div>
	<div class="form-group w-100 mb-2 pb-2">
		<label for="age">Age</label>
		<input class="form-control" type="number" id="age" placeholder="Enter your age..." required />
	</div>
	<div class="form-group w-100 mb-2 pb-2">
		<label for="alias">Alias</label>
		<input class="form-control" type="text" id="alias" placeholder="Enter your alias..." required />
	</div>
	<div class="form-group w-100 mb-2 pb-2">
		<label for="avatar">Avatar</label>
		<input class="form-control" type="url" id="avatar" placeholder="Enter icon url..." />
	</div>

	<%- include("./chat") %>

	<div class="sendMessage w-100 d-flex justify-content-between align-items-end my-4">
		<div class="form-group w-50">
			<label for="message">Message</label>
			<input class="form-control" type="message" id="message" placeholder="This is my message." disabled />
		</div>

		<button disabled="true" class="sendButton w-25 btn btn-primary">Send</button>
	</div>
</div>