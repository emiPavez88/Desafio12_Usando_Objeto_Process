<form
	class="addProductForm d-flex flex-column justify-content-start align-items-center w-100 m-0 bg-color py-3 text-white"
	action="/api/products"
	method="POST"
>
	<h3 class="text-center mb-3 mt-1">Load Products</h3>

	<div class="form-group w-75 mb-4">
		<input class="form-control" type="text" name="title" id="title" placeholder="Title..." />
	</div>

	<div class="form-group w-75 mb-4">
		<input class="form-control" type="number" name="price" id="price" placeholder="Price..." />
	</div>

	<div class="form-group w-75 mb-4">
		<input class="form-control" type="url" name="imageUrl" id="imageUrl" placeholder="Thumbnail..." />
	</div>

	<div class="d-flex justify-content-center mt-3">
		<button class="btn btn-primary" type="submit">Add Product</button>
	</div>
</form>